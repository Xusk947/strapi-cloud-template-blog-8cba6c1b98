{
  "kind": "singleType",
  "collectionName": "contacts",
  "info": {
    "singularName": "contact",
    "pluralName": "contacts",
    "displayName": "Контакты",
    "description": "Контактная информация компании"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "text",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "googleEmbed": {
      "type": "string",
      "description": "Google embed ссылка (<iframe> тег)"
    },
    "yandexEmbed": {
      "type": "string",
      "description": "Yandex embed ссылка (<iframe> тег)"
    },
    "twoGisEmbed": {
      "type": "string",
      "description": "2gis embed ссылка (<iframe> тег)"
    },
    "workHours": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "description": "Часы работы"
    },
    "socialLinks": {
      "type": "component",
      "repeatable": true,
      "component": "shared.social-link"
    },
    "labels": {
      "type": "component",
      "repeatable": false,
      "component": "shared.system-labels",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "description": "Системные метки для переводов"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}
